
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Customer page</h2>

<form>
    <fieldset>
        <legend>Customer</legend>
        <div class="form-group">
            <label for="first-name">First name</label>
            <input id="first-name"  class="form-control" type="text" name="first-name" value="" />
        </div>

        <div class="form-group">
            <label for="last-name">Last name</label>
            <input id="last-name" class="form-control" type="text" name="last-name" value="" />
        </div>

        <input class="btn btn-success" type="submit" name="customer-submit"/>
    </fieldset>
</form>